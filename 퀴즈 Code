import javax.swing.*;
import java.awt.*;

class NorthPanel extends JPanel{
	public NorthPanel() {
		setBackground(Color.LIGHT_GRAY);
		this.add(new JButton("Open"));
		this.add(new JButton("Read"));
		this.add(new JButton("Close"));
	}
}

class CenterPanel extends JPanel{
	public CenterPanel() {
		
		this.setLayout(null);
		
		JLabel la1=new JLabel("Hello");
		la1.setLocation(130,50);
		la1.setSize(100,20);
		this.add(la1);
		
		JLabel la2=new JLabel("Java");
		la2.setLocation(50,40);
		la2.setSize(100,50);
		this.add(la2);
		
		JLabel la3=new JLabel("Love");
		la3.setLocation(180,10);
		la3.setSize(150,30);
		this.add(la3);

	}
}

public class BorderLayoutEx extends JFrame{
		public BorderLayoutEx() {
			setTitle("Open Challenge 9");
			setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
			
			Container c=getContentPane();
			
			c.setLayout(new BorderLayout());
			c.add(new NorthPanel(),BorderLayout.NORTH);
			c.add(new CenterPanel(),BorderLayout.CENTER);
			
			setSize(300,200);
			setVisible(true);
		}
		
public static void main(String[] args) {
	new BorderLayoutEx();
	}

}
